{
  "name": "react-redux-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for ReactJS with Redux",
  "author": "Vivek Marakana",
  "license": "MIT",
  "main": "webpack.config.dev.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "prestart": "babel-node tools/startMessage.js",
    "start": "npm-run-all --parallel test:watch server:development lint:watch",
    "server:development": "babel-node tools/srcServer.js",
    "lint": "esw --ext .js,.jsx webpack.config.* src tools tests",
    "lint:sass": "sass-lint -v -c .sass-lint.yml",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --reporter spec tools/testSetup.js tests/**/*.spec.js",
    "test:watch": "npm run test -- --watch",
    "remove-backup": "rimraf ./www-backup",
    "backup": "(test -d ./www || mkdir -p www) && npm run remove-backup && cp -r ./www ./www-backup",
    "remove-dist": "rimraf ./www",
    "clean-dist": "npm run remove-dist && mkdir www",
    "remove-all-dist": "npm-run-all --parallel remove-dist remove-backup",
    "build:html": "babel-node tools/buildHtml.js",
    "prebuild": "npm-run-all lint:sass lint test backup clean-dist build:html",
    "build": "babel-node tools/build.js",
    "//": "Uncomment '//' from following line key '//postbuild' if you want to use node/express server to serve your application",
    "//postbuild": "npm run server:production",
    "server:production": "test -f ./www/index.html && babel-node tools/prodServer.js"
  },
  "dependencies": {
    "babel-polyfill": "6.16.0",
    "bootstrap": "3.3.7",
    "jquery": "3.1.1",
    "react": "15.3.2",
    "react-dom": "15.3.2",
    "react-redux": "4.4.5",
    "react-router": "2.8.1",
    "react-router-redux": "4.0.6",
    "redux": "3.6.0",
    "redux-thunk": "2.1.0",
    "toastr": "2.1.2"
  },
  "devDependencies": {
    "babel-cli": "6.16.0",
    "babel-core": "6.17.0",
    "babel-loader": "6.2.5",
    "babel-plugin-react-display-name": "2.0.0",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-react-hmre": "1.1.1",
    "babel-register": "6.16.3",
    "cheerio": "0.22.0",
    "colors": "1.1.2",
    "compression": "1.6.2",
    "cross-env": "3.1.2",
    "css-loader": "0.25.0",
    "enzyme": "2.4.1",
    "eslint": "3.7.1",
    "eslint-plugin-import": "2.0.0",
    "eslint-plugin-react": "6.4.1",
    "eslint-watch": "2.1.14",
    "eventsource-polyfill": "0.9.6",
    "expect": "1.20.2",
    "express": "4.14.0",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.9.0",
    "jsdom": "9.6.0",
    "mocha": "3.1.2",
    "nock": "8.1.0",
    "node-sass": "3.10.1",
    "npm-run-all": "3.1.0",
    "open": "0.0.5",
    "react-addons-test-utils": "15.3.2",
    "redux-immutable-state-invariant": "1.2.4",
    "redux-mock-store": "1.2.1",
    "rimraf": "2.5.4",
    "sass-lint": "1.9.1",
    "sass-loader": "4.0.2",
    "sasslint-loader": "0.0.1",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "webpack": "1.13.2",
    "webpack-dev-middleware": "1.8.4",
    "webpack-hot-middleware": "2.13.0"
  },
  "keywords": [
    "react",
    "example",
    "reactjs",
    "react-router",
    "hot",
    "reload",
    "hmr",
    "live",
    "edit",
    "webpack",
    "redux",
    "production",
    "boilerplate",
    "starter"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vivekmarakana/react-redux-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/vivekmarakana/react-redux-boilerplate/issues"
  },
  "homepage": "https://github.com/vivekmarakana/react-redux-boilerplate#readme"
}
