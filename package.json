{
  "name": "react-redux-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for ReactJS with Redux",
  "author": "Vivek Marakana",
  "license": "MIT",
  "scripts": {
    "prestart": "babel-node tools/startMessage.js",
    "start": "npm-run-all --parallel test:watch server:development lint:watch",
    "server:development": "babel-node tools/srcServer.js",
    "lint": "node_modules/.bin/esw --ext .js,.jsx webpack.config.* src tools tests",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --reporter spec tools/testSetup.js tests/**/*.spec.js",
    "test:watch": "npm run test -- --watch",
    "remove-backup": "node_modules/.bin/rimraf ./www-backup",
    "backup": "(test -d ./www || mkdir -p www) && npm run remove-backup && cp -r ./www ./www-backup",
    "remove-dist": "node_modules/.bin/rimraf ./www",
    "clean-dist": "npm run remove-dist && mkdir www",
    "remove-all-dist": "npm-run-all --parallel remove-dist remove-backup",
    "build:html": "babel-node tools/buildHtml.js",
    "prebuild": "npm-run-all backup clean-dist test lint build:html",
    "build": "babel-node tools/build.js",
    "//": "Uncomment '//' from following line key '//postbuild' if you want to use node/express server to serve your application",
    "//postbuild": "npm run server:production",
    "server:production": "test -f ./www/index.html && babel-node tools/prodServer.js"
  },
  "dependencies": {
    "babel-polyfill": "6.8.0",
    "bootstrap": "3.3.6",
    "jquery": "2.2.3",
    "react": "15.0.2",
    "react-dom": "15.0.2",
    "react-redux": "4.4.5",
    "react-router": "2.4.0",
    "react-router-redux": "4.0.4",
    "redux": "3.5.2",
    "redux-thunk": "2.0.1",
    "toastr": "2.1.2"
  },
  "devDependencies": {
    "babel-cli": "6.8.0",
    "babel-core": "6.8.0",
    "babel-loader": "6.2.4",
    "babel-plugin-react-display-name": "2.0.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-react-hmre": "1.1.1",
    "babel-register": "6.8.0",
    "cheerio": "0.22.0",
    "colors": "1.1.2",
    "compression": "1.6.1",
    "cross-env": "1.0.7",
    "css-loader": "0.23.1",
    "enzyme": "2.2.0",
    "eslint": "2.9.0",
    "eslint-plugin-import": "1.6.1",
    "eslint-plugin-react": "5.0.1",
    "eslint-watch": "2.1.11",
    "eventsource-polyfill": "0.9.6",
    "expect": "1.19.0",
    "express": "4.13.4",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.8.5",
    "jsdom": "8.5.0",
    "mocha": "2.4.5",
    "nock": "8.0.0",
    "node-sass": "3.10.1",
    "npm-run-all": "1.8.0",
    "open": "0.0.5",
    "react-addons-test-utils": "15.0.2",
    "redux-immutable-state-invariant": "1.2.3",
    "redux-mock-store": "1.0.2",
    "rimraf": "2.5.2",
    "sass-loader": "4.0.2",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "webpack": "1.13.0",
    "webpack-dev-middleware": "1.6.1",
    "webpack-hot-middleware": "2.10.0"
  },
  "keywords": [
    "react",
    "example",
    "reactjs",
    "react-router",
    "hot",
    "reload",
    "hmr",
    "live",
    "edit",
    "webpack",
    "redux",
    "production",
    "boilerplate",
    "starter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vivekmarakana/react-redux-boilerplate"
  }
}
